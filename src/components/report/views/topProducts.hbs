<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <h1>Top Sản phẩm doanh thu</h1>
    <div class="chart-container">
        <h2>Top sản phẩm doanh thu</h2>
        <form id="yearMonthForm">
            <label for="year">Chọn năm:</label>
            <select id="year" name="year">
                {{#each years}}
                <option value="{{this}}" {{#ifEquals this ../year}}selected{{/ifEquals}}>{{this}}</option>
                {{/each}}
            </select>
            <label for="month">Chọn tháng:</label>
            <select id="month" name="month">
                {{#each months}}
                <option value="{{this}}" {{#ifEquals this ../month}}selected{{/ifEquals}}>{{this}}</option>
                {{/each}}
            </select>
            <label for="topCount">Chọn số lượng sản phẩm top:</label>
            <input type="number" id="topCount" name="topCount" value="{{topCount}}" min="1" max="10">
        </form>

        <!-- Biểu đồ top sản phẩm doanh thu theo năm -->
        <canvas id="annualTopProductsChart"></canvas>

        <!-- Biểu đồ top sản phẩm doanh thu theo tháng -->
        <canvas id="monthlyTopProductsChart"></canvas>

        <!-- Biểu đồ top sản phẩm doanh thu theo tuần -->
        <canvas id="weeklyTopProductsChart"></canvas>

    </div>
    </div>
</div>
    <script src="/js/chartReport/chartTopProducts.js"></script>

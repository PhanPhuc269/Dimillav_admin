<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary rounded p-4">
        <div class="">

            <div class="row">
                <div class="col-md-6 col-lg-5 col-xl-4 mb-4 mb-md-0">

                    <div class="p-3">

                        <div class="input-group rounded mb-3">
                            <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                                aria-describedby="search-addon" />
                            <span class="input-group-text border-0" id="search-addon">
                                <i class="fas fa-search"></i>
                            </span>
                        </div>

                        <div id="chat-list" style="position: relative; height: 400px">
                            <ul class="list-unstyled mb-0">
                                {{#each recentMessages}}
                                <li class="p-2 border-bottom chat-item" data-connect="{{this.receiverName}}">
                                    <a href="#!" class="d-flex justify-content-between">
                                        <div class="d-flex flex-row">
                                            <div>
                                                <img src="{{this.avatar}}" alt="avatar" class="d-flex align-self-center me-3" width="60">
                                                <span class="badge bg-success badge-dot"></span>
                                            </div>
                                            <div class="pt-1">
                                                <p class="fw-bold mb-0">{{this.title}}</p>
                                                <p class="small text-muted truncate">{{this.message}}</p>
                                            </div>
                                        </div>
                                        <div class="pt-1">
                                            <p class="small text-muted mb-1">{{formatTime this.timestamp}}</p>
                                            <span class="badge bg-danger rounded-pill float-end">{{this.unread}}</span>
                                        </div>
                                    </a>
                                </li>
                                {{/each}}
                                <!-- Các mục khác -->
                            </ul>
                        </div>

                    </div>

                </div>

                <div class="col-md-6 col-lg-7 col-xl-8">
                    <div id="chat-header" data-connect="{{receiver.username}}">
                        {{!-- Hiển thị thông tin người nhận tin nhắn --}}
                        <div class="d-flex flex-row align-items-center mb-2 border-bottom">
                            <img src="{{receiver.avatar}}" alt="avatar" class="rounded-circle me-2" style="width: 40px; height: 40px;">
                            <div class="fw-bold">{{receiver.name}}</div>
                        </div>
                    </div>
                    <div class="pt-3 pe-3 overflow-auto" id="chat-content" style="position: relative; height: 473px">
                        {{#each messages}}
                            <div class="d-flex flex-row {{#if (eq this.sender 'Bạn')}}justify-content-end{{else}}justify-content-start{{/if}}">
                                {{#if (eq this.sender 'Bạn')}}
                                    <div>
                                        <p class="small p-2 me-3 mb-1 text-white rounded-3 bg-primary">{{this.message}}</p>
                                        <p class="small me-3 mb-3 rounded-3 text-muted">{{formatTime this.timestamp}}</p>
                                    </div>
                                    <img src="{{../user.avatar}}" class="rounded-circle me-lg-2" style="width: 40px; height: 40px;">
                                {{else}}
                                    <img src="{{this.avatar}}" alt="avatar" class="rounded-circle me-lg-2" style="width: 40px; height: 40px;">
                                    <div>
                                        <p class="small p-2 ms-3 mb-1 rounded-3 bg-body-tertiary">{{this.message}}</p>
                                        <p class="small ms-3 mb-3 rounded-3 text-muted float-end">{{formatTime this.timestamp}}</p>
                                    </div>
                                {{/if}}
                            </div>
                        {{/each}}
                    </div>

                    <div class="text-muted d-flex justify-content-start align-items-center pe-3 pt-3 mt-2">
                        <img class="rounded-circle me-lg-2" src="{{user.avatar}}" alt="" style="width: 40px; height: 40px;">

                        <input type="text" class="form-control form-control-lg" id="chat-input"
                            placeholder="Type message">
                        <a class="ms-1 text-muted" href="#!"><i class="fas fa-paperclip"></i></a>
                        <a class="ms-3 text-muted" href="#!"><i class="fas fa-smile"></i></a>
                        <a class="ms-3" href="#!"><i class="fas fa-paper-plane"></i></a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>